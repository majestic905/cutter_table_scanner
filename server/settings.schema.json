{
  "definitions": {
    "point_or_size":  {
      "type": "array",
      "items": [
        { "type": "integer", "minimum": 0 },
        { "type": "integer", "minimum": 0 }
      ]
    },

    "projection_points": {
      "type": "object",
      "required": ["bottom_left", "bottom_right", "top_right", "top_left"],
      "properties": {
        "bottom_left": { "$ref": "#/definitions/point_or_size" },
        "bottom_right": { "$ref": "#/definitions/point_or_size" },
        "top_right": { "$ref": "#/definitions/point_or_size" },
        "top_left": { "$ref": "#/definitions/point_or_size" }
      }
    },

    "blank_camera": {
      "type": "object",
      "required": ["type", "projection_points", "projected_image_size", "table_section_size"],
      "properties": {
        "type": { "const": "blank" },
        "projection_points": { "$ref": "#/definitions/projection_points" },
        "projected_image_size": { "$ref": "#/definitions/point_or_size" },
        "table_section_size": { "$ref": "#/definitions/point_or_size" }
      }
    },

    "real_camera": {
      "type": "object",
      "required": ["type", "projection_points", "projected_image_size", "table_section_size", "maker", "model", "serial_number"],
      "properties": {
        "type": { "const": "real" },
        "projection_points": { "$ref": "#/definitions/projection_points" },
        "projected_image_size": { "$ref": "#/definitions/point_or_size" },
        "table_section_size": { "$ref": "#/definitions/point_or_size" },
        "maker": { "type": "string" },
        "model": { "type": "string" },
        "serial_number": { "type": "string" }
      }
    },

    "camera": {
      "type": "object",
      "properties": {
        "oneOf": [
          { "$ref": "#/definitions/blank_camera" },
          { "$ref": "#/definitions/real_camera" }
        ]
      }
    }
  },

  "type": "object",
  "required": ["cameras"],
  "properties": {
    "cameras": {
      "type": "object",
      "required": ["LU", "LL", "RL", "RU"],
      "properties": {
        "LU": { "$ref": "#/definitions/camera" },
        "LL": { "$ref": "#/definitions/camera" },
        "RL": { "$ref": "#/definitions/camera" },
        "RU": { "$ref": "#/definitions/camera" }
      }
    }
  }
}